---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "inline-block no-underline text-current hover:text-black hover:dark:text-white relative before:content-[''] before:w-0 before:h-0.5 before:dark:bg-neutral-100 before:bg-neutral-800 before:absolute before:bottom-[-0.25rem] before:transition-[width] before:duration-[0.4s] before:rounded-sm before:left-0 hover:before:w-full",
    underline && "underline underline-offset-2",
  )}
  {...rest}
>
  <slot />
</a>
